{
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"module": "CommonJS",
		"target": "ES2022",
		"strict": true,
		"baseUrl": "./",
		"paths": {
			"@config/*": ["src/config/*"],
			"@lib/*": ["src/libs/*"],
			"@controllers/*": ["src/controllers/*"]
		}
	},
	"exclude": ["node_modules"],
	"include": ["src"]
}
